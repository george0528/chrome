{
  "manifest_version": 2,
  "name": "連投tools",
  "description": "Youtubeのライブにおけるコメント連投ツールです",
  "version": "1.0",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "128": "128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["script.js"]
    }
  ],
  "browser_action": {
    "default_icon": "32.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "https://*/*"
  ]
}
